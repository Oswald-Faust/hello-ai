# Configuration du serveur
PORT=3001
NODE_ENV=development
API_BASE_URL=http://localhost:3001

# Configuration de la base de données
DATABASE_URL=postgres://postgres:postgres@localhost:5432/lydia
MONGODB_URI=mongodb://localhost:27017/lydia

# Configuration de l'authentification
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRATION=24h

# Configuration de Fonoster
FONOSTER_API_KEY=your_fonoster_api_key_here
# OU utiliser username/password
# FONOSTER_USERNAME=your_fonoster_username
# FONOSTER_PASSWORD=your_fonoster_password
WEBHOOK_URL=http://localhost:3001/api/calls/incoming
VOICE_URL=http://localhost:3001/api/calls/voice

# Configuration d'OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo

# Configuration de Google Speech-to-Text
GOOGLE_APPLICATION_CREDENTIALS=path_to_your_credentials.json

# Configuration du frontend
FRONTEND_URL=http://localhost:3000

# Configuration de Redis (optionnel)
REDIS_URL=redis://localhost:6379

# Twilio (déprécié - à garder pour la rétrocompatibilité)
# TWILIO_ACCOUNT_SID=your_account_sid_here
# TWILIO_AUTH_TOKEN=your_auth_token_here

# Configuration Fish Audio (pour les voix personnalisées)
FISH_AUDIO_API_KEY=votre_cle_api_fishaudio
FISH_AUDIO_API_URL=https://api.fish.audio/v1/tts